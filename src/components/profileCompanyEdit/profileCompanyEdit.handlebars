<main class="profile">
    <div class="profile__header">
        <div class="profile__info">
            <div class="profile__avatar">
                <img src="{{logo}}" alt="Фото профиля" class="profile__avatar-img">
            </div>
            <div class="profile__details">
                <h1 class="profile__name">{{company_name}}</h1>
                <p class="profile__quote">{{slogan}}
                </p>
            </div>
        </div>
        <div class="profile__actions">
            <button class="job__button_second">Отменить</button>
            <button class="job__button">Сохранить</button>
        </div>
    </div>

    <h2 class="profile__title">Настройки профиля</h2>

    <form class="profile__form">
        <div class="profile__section">
            <h3 class="profile__section-title">Логотип компании</h3>
            <div class="profile__photo-upload">
                <div class="profile__photo-preview">
                    <img src="{{logo}}" alt="Логотип для компании" class="profile__photo-img">
                </div>
                <div class="profile__photo-dropzone">
                    <input type="file" id="file-input" class="profile__photo-input" accept=".jpg, .png, .webp" />
                    <div class="profile__photo-content">
                        <p class="profile__photo-text">Выбрать изображение</p>
                        <p class="profile__photo-hint">jpg, png, webp, до 6 МБ, не более 10 000 x 10 000 пикселей</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="profile__section">
            <h3 class="profile__section-title">О компании</h3>
            <div class="profile__fields">
                <div class="profile__field">
                    <label class="profile__label">Название</label>
                    <input type="text" class="profile__input" value="{{company_name}}" name="company_name">
                </div>
                <div class="profile__field">
                    <label class="profile__label">Сайт компании</label>
                    <input type="text" class="profile__input" value="{{website}}" name="website">
                </div>
                <div class="profile__field">
                    <label class="profile__label">Местоположение компании</label>
                    <input type="text" class="profile__input" value="{{address}}" name="address">
                </div>
                <div class="profile__field profile__field--full-width">
                    <label class="profile__label">Слоган</label>
                    <input type="text" class="profile__input"
                        value="{{slogan}}" name="slogan">
                </div>
                <div class="profile__field profile__field--full-width">
                    <label class="profile__label">О компании</label>
                    <textarea
                        class="profile__textarea" name="description">{{description}}</textarea>
                </div>
            </div>
        </div>

        <div class="profile__actions">
            <button type="button" class="job__button_second">Отменить</button>
            <button type="submit" class="job__button">Сохранить</button>
        </div>
    </form>
</main>