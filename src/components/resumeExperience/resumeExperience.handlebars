<div class="experience__item">
    <div class="experience__period">
        {{#if until_now}}
        {{start_date}} - сейчас
        {{else}}
        {{start_date}} - {{end_date}}<br>
        {{/if}}
        <br>
        {{#if duration}}
        {{duration}} Месяца
        {{/if}}
    </div>
    <div class="experience__details">
        <h4 class="experience__title">{{position}}</h4>
        <p class="experience__company">{{employer_name}}</p>
        <p class="experience__description">{{duties}}</p>
    </div>
</div>