      </div>
    </div>

    <!-- Местоположение -->
    <div class="resume_sidebar__section">
      <div class="resume_sidebar__title">Город проживания</div>
      <div class="resume_sidebar__value">{{applicant.city}}</div>
    </div>

    <!-- Дата рождения -->
    <div class="resume_sidebar__section">
      <div class="resume_sidebar__title">Дата рождения</div>
      <div class="resume_sidebar__value">{{applicant.birth_date}}</div>
    </div>

    <!-- Навыки -->
    <div class="resume_sidebar__section">
      <div class="resume_sidebar__title">Профессиональные навыки</div>
      <div class="job__badges">
        {{#each skills}}
        <div class="job__badge">{{this}}</div>
        {{/each}}
      </div>
    </div>

    <!-- Контакты -->
    <div class="resume_sidebar__section">
      <div class="resume_sidebar__title">Контакты</div>
      <div class="resume_sidebar__contacts">
        {{#if applicant.vk}}
        <div class="contact-link">
          <img src="/vk.svg" />
          <span>{{applicant.vk}}</span>
        </div>
        {{/if}}
        {{#if applicant.telegram}}
        <div class="contact-link">
          <img src="/tg.svg" />
          <span>{{applicant.telegram}}</span>
        </div>
        {{/if}}
        {{#if applicant.facebook}}
        <div class="contact-link">
          <img src="/globe.svg" />
          <span>{{applicant.facebook}}</span>
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Статус -->
    {{#if applicant.status}}
    <div class="resume_sidebar__section">
      <div class="resume_sidebar__title">Статус</div>
      <div class="resume_sidebar__badge">
        {{lookup statusTranslations applicant.status}}
      </div>
    </div>
    {{/if}}
  </div>
</div>