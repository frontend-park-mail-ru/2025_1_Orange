<div class="profile" id="profile_user_page">
    <div class="profile__header">
        <div class="profile__back">
            <div class="profile__back-icon">
                <img src="/arrow-left.svg" />
            </div>
            <div class="profile__back-text">
                Вернуться к списку вакансий
            </div>
        </div>
        <div class="profile__actions">
            <button class="profile__button profile__button-black">Создать резюме</button>
            <button class="profile__button profile__button-white">Настройки</button>
        </div>
    </div>

    <div class="profile__wrapper">
        <div class="profile__body">
            <div class="profile__info">
                <div class="profile__avatar">
                    {{> partials/avatar avatar=avatar_path}}
                </div>
                <div class="profile__details">
                    <div class="profile__name">{{last_name}} {{first_name}} {{middle_name}}</div>
                    <div class="profile__quote">{{quote}}</div>
                </div>
            </div>
            <div class="profile__divider"></div>
            <!-- Добавляем вкладки -->
            <div class="profile__info-main">
                <div class="profile__tabs">
                    <div class="profile__tab" id="profile-resumes">
                        <div class="profile__tab-icon">
                            <svg width="16" height="20" viewBox="0 0 16 20" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M11 2H14C14.5523 2 15 2.44772 15 3V18C15 18.5523 14.5523 19 14 19H2C1.44772 19 1 18.5523 1 18V3C1 2.44772 1.44772 2 2 2H5M5 5H11M6 1V5H10V1H6Z"
                                      stroke="#111928" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        Мои резюме
                    </div>
                    <div class="profile__tab" id="profile-responses">
                        <div class="profile__tab-icon">
                            <svg width="18" height="16" viewBox="0 0 18 16" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.49991 4.04583H9.99991V2.11883C9.99991 1.19783 10.8999 0.672835 11.5239 1.22483L16.6319 5.71484C16.7498 5.82693 16.8436 5.9618 16.9077 6.11128C16.9718 6.26075 17.0049 6.42169 17.0049 6.58434C17.0049 6.74698 16.9718 6.90792 16.9077 7.05739C16.8436 7.20687 16.7498 7.34174 16.6319 7.45384L11.5239 11.9438C10.8999 12.4998 9.99991 11.9708 9.99991 11.0508V9.12284H7.99991C7.60292 9.12584 7.21041 9.20702 6.84479 9.36173C6.47918 9.51643 6.14761 9.74164 5.86903 10.0245C5.59046 10.3073 5.37032 10.6423 5.22119 11.0102C5.07207 11.3781 4.99688 11.7718 4.99991 12.1688V14.9998C3.71901 14.6196 2.61655 13.7934 1.89208 12.6707C1.1676 11.548 0.868974 10.2031 1.05025 8.87928C1.23152 7.55549 1.88072 6.34034 2.88034 5.45375C3.87996 4.56716 5.16394 4.06772 6.49991 4.04583Z"
                                      stroke="#111928" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        Отклики
                    </div>
                    <div class="profile__tab" id="profile-favorites">
                        <div class="profile__tab-icon">
                            <svg width="20" height="18" viewBox="0 0 20 18" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M10.0106 3.00103C4.49992 -2.00011 -1.00008 4.99989 3.78098 10.0005L10.0106 16.9999L16.2402 10.0005C20.9999 4.99989 15.4999 -2.00011 10.0106 3.00103Z"
                                      stroke="#111928" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        Избранное
                    </div>
                </div>
                <div class="resume-table">
                    <div class="resume-table__header">
                        <div class="resume-table__header-cell">Профессия</div>
                        <div class="resume-table__header-cell">Профессиональные навыки</div>
                    </div>
                    <div class="resume-table__body" id="resume-content" hidden>

                    </div>
                </div>

                <div class="jobs_list" id="vacancy-content">
                </div>
            </div>
        </div>
        <div class="profile__meta">
            {{#if city}}
            <div class="profile__item">
                <div class="profile__property">Город проживания</div>
                <div class="profile__value">{{city}}</div>
            </div>
            {{/if}}
            {{#if birth_date}}
            <div class="profile__item">
                <div class="profile__property">Дата рождения</div>
                <div class="profile__value">{{birth_date}}</div>
            </div>
            {{/if}}
            <div class=" profile__item">
                <div class="profile__property">Социальные сети</div>
                <div class="profile__social-icons">
                    {{#if vk}}
                    <div class="profile__soc-icon">
                        <a href="{{vk}}">
                            <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="32" height="32" viewBox="0 0 48 48">
                                <path fill="#1976d2" d="M24 4A20 20 0 1 0 24 44A20 20 0 1 0 24 4Z"></path><path fill="#fff" d="M35.937,18.041c0.046-0.151,0.068-0.291,0.062-0.416C35.984,17.263,35.735,17,35.149,17h-2.618 c-0.661,0-0.966,0.4-1.144,0.801c0,0-1.632,3.359-3.513,5.574c-0.61,0.641-0.92,0.625-1.25,0.625C26.447,24,26,23.786,26,23.199 v-5.185C26,17.32,25.827,17,25.268,17h-4.649C20.212,17,20,17.32,20,17.641c0,0.667,0.898,0.827,1,2.696v3.623 C21,24.84,20.847,25,20.517,25c-0.89,0-2.642-3-3.815-6.932C16.448,17.294,16.194,17,15.533,17h-2.643 C12.127,17,12,17.374,12,17.774c0,0.721,0.6,4.619,3.875,9.101C18.25,30.125,21.379,32,24.149,32c1.678,0,1.85-0.427,1.85-1.094 v-2.972C26,27.133,26.183,27,26.717,27c0.381,0,1.158,0.25,2.658,2c1.73,2.018,2.044,3,3.036,3h2.618 c0.608,0,0.957-0.255,0.971-0.75c0.003-0.126-0.015-0.267-0.056-0.424c-0.194-0.576-1.084-1.984-2.194-3.326 c-0.615-0.743-1.222-1.479-1.501-1.879C32.062,25.36,31.991,25.176,32,25c0.009-0.185,0.105-0.361,0.249-0.607 C32.223,24.393,35.607,19.642,35.937,18.041z"></path>
                            </svg>
                        </a>
                    </div>
                    {{/if}}
                    {{#if telegram}}
                    <div class="profile__soc-icon">
                        <a href="{{telegram}}">
