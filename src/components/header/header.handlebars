<div class="header">
    <div class="header__name"><b>Resu<span style="color:#F32526">Match</span></b></div>
    <div class="header__links">
        <div class="header__link">Вакансии</div>
        <div class="header__link">Соискатели</div>
        <div class="header__link">Компании</div>
    </div>
    <div class="header__auth">
        {{#if authorized}}
            {{#if isEmployer}}
                <div class="header__button">Создать вакансию</div>
            {{else}}
                <div class="header__button">Создать резюме</div>
            {{/if}}
            <div class="header__profile">
                {{#if isEmployer}}
                <img src="{{user.employer.logo}}" class="header__profile-icon">
                {{else}}
                <img src="{{user.applicant.avatar}}" class="header__profile-icon">
                {{/if}}
                

                <div class="header__dropdown">
                    <div class="header__dropdown__item">Настройки</div>
                    <div class="header__dropdown__divider"></div>
                    <div class="header__dropdown__item header__dropdown__item--logout">Выход</div>
                </div>
            </div>
        {{else}}
            <div class="header__button">Создать резюме</div>
            <div class="header__link header__login">Войти</div>
        {{/if}}
    </div>
</div>