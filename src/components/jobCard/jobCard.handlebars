<div class="job" id="{{p.id}}">
    <div class="job__favorite">
        <img src="https://img.icons8.com/?size=50&id=87&format=png" alt="Избранное">
    </div>
    <div class="job__avatar">
        <img src="https://placehold.co/100x100/EEE/31343C" alt="Логотип компании">
    </div>
    <div class="job__info">
        <p class="job__name">{{p.profession}}</p>
        <p class="job__salary">{{p.salary}}</p>
        <p class="job__company">{{p.company}}</p>
        <div class="job__advantages">
            <div class="job__city">
                <img src="https://img.icons8.com/ios/50/address--v1.png" alt="address--v1" /> {{p.city}}
            </div>
            <div class="job__badges">
                {{#each p.badges}}
                 <div class="job__badge">{{name}}</div>
                 {{/each}}
            </div>
        </div>
        <div class="job__footer">
            <div class="job__buttons">
                <div class="job__button">Откликнуться</div>
            </div>
            <div class="job__statistics">
                Создано {{p.day_created}} дня назад • {{p.count}} уже откликнулись
            </div>
        </div>
    </div>
</div>