<div class="header">
    <div class="header__name"><b>Resu<span style="color:#F32526">Match</span></b></div>
    <div class="header__links">
        <div class="header__link" id="vacancy_catalog_link">Вакансии</div>
        <div class="header__link" id="resume_catalog_link">Соискатели</div>
        {{!-- <div class="header__link">Компании</div> --}}
    </div>
    <div class="header__auth">
        {{#if authorized}}
        <!-- Колокольчик уведомлений -->
        <div class="header__notifications" id="notifications-bell">
            <svg class="header__notifications-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M13.73 21a2 2 0 0 1-3.46 0" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <div class="header__notifications-badge {{#unless unreadCount}}hidden{{/unless}}" id="notifications-badge">
                {{unreadCount}}
            </div>
            <!-- Контейнер для уведомлений будет добавлен здесь -->
        </div>
        {{#if isEmployer}}
        <div class="header__button">Создать вакансию</div>
        {{else}}
        <div class="header__button">Создать резюме</div>
        {{/if}}
        <div class="header__profile">
            <img src="/icons-user-profile.svg" class="header__profile-icon" alt="Профиль" />

            <div class="header__dropdown">
                <div class="header__dropdown__item" id="profile_page_link">Профиль</div>
                <div class="header__dropdown__item" id="edit_profile_page_link">Настройки</div>
                <div class="header__dropdown__divider--mobile"></div>
                <div class="header__dropdown__item--mobile" id="mobile_vacancy">Вакансии</div>
                <div class="header__dropdown__item--mobile" id="mobile_resume">Соискатели</div>
                {{#if isEmployer}}
                <div class="header__dropdown__item--mobile" id="mobile_create">Создать вакансию</div>
                {{else}}
                <div class="header__dropdown__item--mobile" id="mobile_create">Создать резюме</div>
                {{/if}}
                <div class="header__dropdown__divider"></div>
                <div class="header__dropdown__item header__dropdown__item--logout" id="logout_profile_link">Выход</div>
            </div>
        </div>
        {{else}}
        <div class="header__button">Создать резюме</div>
        <div class="header__link header__login">Войти</div>
        {{/if}}
    </div>
</div>
