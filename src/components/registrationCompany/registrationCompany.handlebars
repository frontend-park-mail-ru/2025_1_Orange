<form class="form" name="registration_company">
    <div class="form__back">&#10094;</div>
        <div class="form__name">О компании</div>
        <div class="form__input">
            <input type="text" placeholder="Название компании" name="company_name" minlength="2" value="{{companyName}}" maxlength="30" pattern="^[а-яА-Яa-zA-Z0-9\s\.,\-]+$" required>
            <input type="text" placeholder="Юридический адрес" name="company_address" minlength="10" value="{{companyAddress}}" maxlength="50" pattern="^[а-яА-Яa-zA-Z0-9\s\.,\-]+$" required>
        </div>
        <div class="form__error">

        </div>
    <button type="submit" class="form__button" name="submit">Зарегистрироваться</button>
</form>